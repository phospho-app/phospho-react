{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "types": ["node"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": false, // TODO: strict: true
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/*", "./lib/*.d.ts"]
}
